<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guswn_000.myapplication.RestaurantActivity">

    <EditText
        android:id="@+id/reste1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="개수 입력"
        android:layout_above="@+id/reste2"
        android:layout_alignLeft="@+id/reste2"
        android:layout_alignStart="@+id/reste2" />
    <EditText
        android:id="@+id/reste2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="개수 입력"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/reste3"
        android:layout_alignStart="@+id/reste3" />
    <EditText
        android:id="@+id/reste3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="개수 입력"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/reste2"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="피자(15000원)"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스파게티(13000원)"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="샐러드(9000원)"
        android:layout_alignBaseline="@+id/reste3"
        android:layout_alignBottom="@+id/reste3"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <CheckBox
        android:id="@+id/restcheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멤버십 카드 있음(10%할인)"
        android:layout_above="@+id/restb1"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/restb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/restcheckbox"
        android:layout_alignStart="@+id/restcheckbox"
        android:layout_centerVertical="true"
        android:text="금액 계산하기" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="주문개수"
        android:layout_below="@+id/restb1"
        android:layout_alignLeft="@+id/restb1"
        android:layout_alignStart="@+id/restb1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="15dp"
        android:text="주문금액" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="0개" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:text="0원" />
</RelativeLayout>
